<!-- activity_invoice_processing.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".invoiceprocessing">

    <TextView
        android:id="@+id/textViewInvoiceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Invoice Details:"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etInvoiceDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewInvoiceDetails"
        android:layout_marginTop="10dp"
        android:hint="Enter invoice details..."
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"/>

    <Button
        android:id="@+id/btnProcessInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etInvoiceDetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Process Invoice"/>
</RelativeLayout>
