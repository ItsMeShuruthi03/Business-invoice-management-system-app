<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnInvoiceGeneration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice Generation"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btnInvoiceProcessing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice Processing"
        android:layout_below="@id/btnInvoiceGeneration"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btnTrackingMonitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking and Monitoring"
        android:layout_below="@id/btnInvoiceProcessing"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/btnFinancialReporting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financial Reporting"
        android:layout_below="@id/btnTrackingMonitoring"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

</RelativeLayout>
